<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_remoteFileItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/layout_remoteFileItem_icon"
        android:layout_width="50dip"
        android:layout_height="50dip" >
    </ImageView>

    <TextView
        android:id="@+id/layout_remoteFileItem_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/layout_remoteFileItem_icon"
        android:singleLine="true"
        android:text="@+id/layout_remoteFileItem_filename"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/layout_remoteFileItem_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_remoteFileItem_filename"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/layout_remoteFileItem_icon"
        android:text="@+id/layout_remoteFileItem_info" >
    </TextView>

    <TextView
        android:id="@+id/layout_remoteFileItem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_remoteFileItem_filename"
        android:layout_marginLeft="5dip"
        android:text="@+id/layout_remoteFileItem_date" >
    </TextView>

</RelativeLayout>